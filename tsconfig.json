{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": [
    "./**/*.ts",
    "./**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}